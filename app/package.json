{
	"name": "app",
	"version": "1.0.0",
	"main": "src/index.ts",
	"types": "src/index.ts",
	"license": "MIT",
	"scripts": {
		"start": "cross-env NODE_ENV=LOCAL node  -r dotenv/config ./dist/Startup.js",
		"start:debug": "nodemon src/Startup.ts",
		"docker:build": "docker build -t node/skeleton .",
		"docker:test": "docker build --target export-test-results --output type=local,dest=out .",
		"docker:sonar": "docker build --target sonar .",
		"build:clean": "rimraf dist/*",
		"build:tsc": "ttsc -P tsconfig.json",
		"build:esbuild": "ts-node ./build.ts",
		"build": "npm-run-all build:clean build:routes build:esbuild",
		"build:routes": "tsoa spec-and-routes",
		"push": "npm-run-all build:routes test:run",
		"test": "npm-run-all build test:run",
		"test:run": "jest --config jest.config.ts --coverage false",
		"test:cov": "npm-run-all build:routes test:run:cov",
		"test:run:cov": "jest --config jest.config.ts --coverage true",
		"lint": "eslint 'src**/*.ts' --fix",
		"format": "prettier-eslint --write '{src/**/*.{ts,ts,jsx},tests/**/*.{ts,ts,jsx},!(node_modules)/**/}*.{ts,ts,jsx}'",
		"docs": "npm-run-all docs:configurations docs:run",
		"docs:run": "mkdocs serve",
		"docs:configurations": "ts-node joi-to-md.ts",
		"docs:prepare": "pip install mkdocs mkdocs-kroki-plugin mkdocs-techdocs-core mkdocs-diagrams"
	},
	"engines": {
		"node": ">=16"
	},
	"dependencies": {
		"@jbootcaba/express": "*",
		"@jbootcaba/helpers": "*",
		"@jbootcaba/inversify": "*",
		"@jbootcaba/logger-pino": "*",
		"@jbootcaba/seed": "*",
		"@opentelemetry/auto-instrumentations-node": "^0.33.1",
		"@opentelemetry/exporter-metrics-otlp-http": "^0.33.0",
		"@opentelemetry/exporter-trace-otlp-http": "^0.33.0",
		"@opentelemetry/sdk-trace-node": "^1.7.0",
		"apollo-server-express": "^3.10.2",
		"axios": "^1.1.2",
		"class-validator": "^0.13.2",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"date-fns": "^2.29.3",
		"express": "^4.18.1",
		"graphql-depth-limit": "^1.1.0",
		"graphql-playground-middleware-express": "^1.7.23",
		"helmet": "^6.0.0",
		"hpropagate": "^1.0.1",
		"husky": "^8.0.1",
		"jest": "^29.1.2",
		"jsonwebtoken": "^8.5.1",
		"npm-run-all": "^4.1.5",
		"rate-limiter-flexible": "^2.3.11",
		"swagger-ui-express": "^4.5.0",
		"tsoa": "^4.1.3",
		"type-graphql": "^1.1.1",
		"type-result": "^0.9.5"
	},
	"devDependencies": {
		"@anatine/esbuild-decorators": "^0.2.19",
		"@types/express": "^4.17.14",
		"@types/jest": "^29.1.2",
		"jest": "^29.1.2",
		"jest-html-reporter": "^3.7.0",
		"jest-junit": "^14.0.1",
		"jest-sonar-reporter": "^2.0.0",
		"jest-ts-auto-mock": "^2.1.0",
		"jest-when": "^3.5.1",
		"joi-md-doc": "^0.1.0",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"pm2": "^5.2.0",
		"rimraf": "^3.0.2",
		"supertest": "^6.3.0",
		"ts-auto-mock": "^3.6.2",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0",
		"ttypescript": "^1.5.13",
		"typescript": "^4.8.4",
		"typescript-transform-paths": "^3.3.1"
	}
}
