		"rootDir": "src",
		"baseUrl": "./",
		"paths": {
			"@jbootcaba/core": ["../core"],
			"@jbootcaba/config": ["../config"],
			"@jbootcaba/context": ["../context"],
			"@jbootcaba/express": ["../express"],
			"@jbootcaba/helpers": ["../helpers"],
			"@jbootcaba/http": ["../http"],
			"@jbootcaba/inversify": ["../inversify"],
			"@jbootcaba/logger": ["../logger"],
			"@jbootcaba/logger-pino": ["../logger-pino"],
			"@jbootcaba/resiliency": ["../resiliency"]
